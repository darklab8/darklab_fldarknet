	.tab-list {
		height: 100%;
		display: flex;
    	flex-wrap: wrap;
    	flex-direction: row;
		align-content: stretch;

		.selected {
			background-color: var(--selected);
		}
		& button {
			font-size: 0.75em;
			background-color: var(--color_background);
			color: var(--color_text);
			border-color: var(--color_border);

			min-width: 50px;
			cursor: pointer;
			min-height: 36px;

			&:hover {
				background-color: var(--color_hover);
			}
		}
	}
